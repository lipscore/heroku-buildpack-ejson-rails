#!/usr/bin/env bash
set -euo pipefail

step() { echo "-----> $*"; }

step "DEBUG: Running EJSON buildpack detect phase"
step "Current working directory: $(pwd)"

step "Top-level files:"
ls -la || true

step "Contents of config/:"
ls -la config || true

step "Contents of config/secrets/:"
ls -la config/secrets || true

# Force success so logs aren't hidden
echo "EJSON"
exit 0
